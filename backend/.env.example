# ⚠️ PLANTILLA DE VARIABLES DE ENTORNO
# Copia este archivo como .env y configura tus valores reales

# Entorno (development o production)
ENV=development

# Seguridad JWT
# Generar con: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=GENERAR_CLAVE_SEGURA_AQUI

# Configuración de MongoDB
MONGODB_HOST=tu-servidor-mongodb.com
MONGODB_PORT=27017
MONGODB_USER=tu_usuario
MONGODB_PASSWORD=tu_contraseña_segura
MONGODB_DB=central_db

# Configuración de MinIO/S3
MINIO_ENDPOINT=tu-servidor-minio.com
MINIO_PORT=443
MINIO_ACCESS_KEY=tu_access_key
MINIO_SECRET_KEY=tu_secret_key_segura
MINIO_BUCKET_NAME=central-atenciones
MINIO_USE_SSL=true
